// Modify your Keystone config when you want to change this.

datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  password String
}

model Client {
  id    String @id @default(cuid())
  name  String @default("")
  lists List[] @relation("List_client")
}

model List {
  id       String       @id @default(cuid())
  title    String       @default("")
  client   Client?      @relation("List_client", fields: [clientId], references: [id])
  clientId String?      @map("client")
  type     ListType?    @relation("List_type", fields: [typeId], references: [id])
  typeId   String?      @unique @map("type")
  uploads  FileUpload[] @relation("FileUpload_list")

  @@index([clientId])
}

model FileUpload {
  id            String    @id @default(cuid())
  name          String    @default("")
  file_filesize Int?
  file_mode     String?
  file_filename String?
  fileType      FileType? @relation("FileUpload_fileType", fields: [fileTypeId], references: [id])
  fileTypeId    String?   @map("fileType")
  list          List?     @relation("FileUpload_list", fields: [listId], references: [id])
  listId        String?   @map("list")

  @@index([fileTypeId])
  @@index([listId])
}

model ListType {
  id    String     @id @default(cuid())
  name  String     @default("")
  lists List?      @relation("List_type")
  files FileType[] @relation("FileType_listType")
}

model FileType {
  id         String       @id @default(cuid())
  name       String       @default("")
  extensions String       @default("")
  files      FileUpload[] @relation("FileUpload_fileType")
  listType   ListType[]   @relation("FileType_listType")
}